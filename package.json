{
  "name": "bedrock-ui-vue3",
  "version": "0.0.0",
  "scripts": {
    "build": "rimraf dist && npm run sass:prod && vue-tsc && vite build",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:serve": "vitepress serve docs",
    "watch": "vite build --watch",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore --fix src/components",
    "format": "prettier src/components  --write",
    "sass:dev": "sass --watch --update --style=expanded src/assets/scss:dist/resources",
    "sass:prod": "sass --no-source-map --style=compressed src/assets/scss:dist/resources"
  },
  "peerDependencies": {
    "primeflex": "^3.2.1",
    "primeicons": "^6.0.1",
    "primevue": "^3.18.1",
    "vue": "^3.2.41"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.2.0",
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@vitejs/plugin-vue": "^3.2.0",
    "@vue/eslint-config-airbnb": "^7.0.0",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vue": "^9.7.0",
    "prettier": "2.7.1",
    "primeflex": "^3.2.1",
    "primeicons": "^6.0.1",
    "primevue": "^3.18.1",
    "rimraf": "^3.0.2",
    "sass": "^1.56.0",
    "typescript": "^4.8.4",
    "vite": "^3.2.2",
    "vite-plugin-eslint": "^1.8.1",
    "vitepress": "^0.22.4",
    "vue": "^3.2.25",
    "vue-tsc": "^1.0.9"
  },
  "files": [
    "src",
    "dist",
    "dist/resources/test.css"
  ],
  "types": "./dist/types/index.d.ts",
  "module": "./dist/bedrock-ui-vue3.es.js",
  "exports": {
    ".": {
      "import": "./dist/bedrock-ui-vue3.es.js"
    },
    "./dist/style.css": "./dist/style.css",
    "./dist/resources/default/test.css": {
        "import": "./dist/resources/default/test.css",
        "require": "./dist/resources/default/test.css"
    },
    "./dist/resources/css/vendor/flags/css/flag-icon.min.css": {
        "import": "./dist/resources/css/vendor/flags/css/flag-icon.min.css",
        "require": "./dist/resources/css/vendor/flags/css/flag-icon.min.css"
    }
  },
  "dependencies": {
    "compile-sass": "^2.0.0",
    "express": "^4.18.2",
    "vite-plugin-static-copy": "^0.11.1"
  }
}
